    <script>
       // ØªØ§Ø¨Ø¹ ØªØ´Ø®ÛŒØµ Ø±ÙˆØ² Ù‡ÙØªÙ‡ Ø¨Ù‡ ÙØ§Ø±Ø³ÛŒ
        function getPersianWeekday() {
            const tehranTime = new Date().toLocaleString("en-US", { timeZone: "Asia/Tehran" });
            const tehranDate = new Date(tehranTime);
            const weekdays = ['ÛŒÚ©Ø´Ù†Ø¨Ù‡', 'Ø¯ÙˆØ´Ù†Ø¨Ù‡', 'Ø³Ù‡â€ŒØ´Ù†Ø¨Ù‡', 'Ú†Ù‡Ø§Ø±Ø´Ù†Ø¨Ù‡', 'Ù¾Ù†Ø¬Ø´Ù†Ø¨Ù‡', 'Ø¬Ù…Ø¹Ù‡', 'Ø´Ù†Ø¨Ù‡'];
            return weekdays[tehranDate.getDay()];
        }

        // ØªØ§Ø¨Ø¹ ÙØ±Ù…Øªâ€ŒØ¨Ù†Ø¯ÛŒ ØªØ§Ø±ÛŒØ® ÙØ§Ø±Ø³ÛŒ
        function getPersianDate() {
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                timeZone: 'Asia/Tehran'
            };
            return new Date().toLocaleDateString('fa-IR', options);
        }

        // Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø³Ø§Ø¹Øª Ùˆ Ø¨Ø±Ù†Ø§Ù…Ù‡ Ø±ÙˆØ²
        function updateSchedule() {
            const tehranTime = new Date().toLocaleString("en-US", { 
                timeZone: "Asia/Tehran",
                hour12: false
            });
            const tehranDate = new Date(tehranTime);
            
            // Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø³Ø§Ø¹Øª
            const hours = String(tehranDate.getHours()).padStart(2, '0');
            const minutes = String(tehranDate.getMinutes()).padStart(2, '0');
            const seconds = String(tehranDate.getSeconds()).padStart(2, '0');
            const timeString = `${hours}:${minutes}:${seconds}`;
            
            // Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ ØªØ§Ø±ÛŒØ®
            document.getElementById('currentDate').textContent = getPersianDate();
            
            // Ù†Ù…Ø§ÛŒØ´ Ø¨Ø±Ù†Ø§Ù…Ù‡ Ø±ÙˆØ² Ø¬Ø§Ø±ÛŒ
            const currentDay = getPersianWeekday();
            document.querySelectorAll('tbody tr').forEach(row => {
                const dayCell = row.querySelector('.day-cell');
                const dayText = dayCell.textContent.trim().split('\n')[0];
                const clock = dayCell.querySelector('.digital-clock');
                
                if (dayText === currentDay) {
                    row.classList.remove('hidden-day');
                    clock.style.display = 'block';
                    clock.textContent = timeString;
                    row.querySelector('td:first-child').classList.add('active-day');
                } else {
                    row.classList.add('hidden-day');
                    clock.style.display = 'none';
                    row.querySelector('td:first-child').classList.remove('active-day');
                }
            });
        }

        // Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ù‡Ø± Ø«Ø§Ù†ÛŒÙ‡
        setInterval(updateSchedule, 1000);
        updateSchedule(); // Ø§Ø¬Ø±Ø§ÛŒ Ø§ÙˆÙ„ÛŒÙ‡

        // Ø³ÛŒØ³ØªÙ… ØªØºÛŒÛŒØ± ØªÙ…
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;

        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            body.setAttribute('data-theme', savedTheme);
            themeToggle.textContent = savedTheme === 'dark' ? 'ğŸŒ™' : 'ğŸŒ';
        }

        function toggleTheme() {
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            body.setAttribute('data-theme', newTheme);
            themeToggle.textContent = newTheme === 'dark' ? 'ğŸŒ™' : 'ğŸŒ';
            localStorage.setItem('theme', newTheme);
        }

        document.addEventListener('DOMContentLoaded', () => {
            initTheme();
            themeToggle.addEventListener('click', toggleTheme);
        });
    </script>
</body>
