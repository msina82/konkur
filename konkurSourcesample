        let manualTheme = false;

        function getTehranTime() {
            return new Date(new Date().toLocaleString("en-US", {timeZone: "Asia/Tehran"}));
        }

        function getPersianWeekday() {
            const weekdays = ['ÛŒÚ©Ø´Ù†Ø¨Ù‡', 'Ø¯ÙˆØ´Ù†Ø¨Ù‡', 'Ø³Ù‡â€ŒØ´Ù†Ø¨Ù‡', 'Ú†Ù‡Ø§Ø±Ø´Ù†Ø¨Ù‡', 'Ù¾Ù†Ø¬Ø´Ù†Ø¨Ù‡', 'Ø¬Ù…Ø¹Ù‡', 'Ø´Ù†Ø¨Ù‡'];
            return weekdays[getTehranTime().getDay()];
        }

        function getPersianDate() {
            return new Date().toLocaleDateString('fa-IR', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                timeZone: 'Asia/Tehran'
            });
        }

        function calculateKonkurCountdown() {
            const now = getTehranTime();
            const diff = KONKUR_DATE - now;
            if(diff <= 0) return 'ğŸ‰ Ø²Ù…Ø§Ù† Ú©Ù†Ú©ÙˆØ± ÙØ±Ø§ Ø±Ø³ÛŒØ¯Ù‡ Ø§Ø³Øª!';

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            return `${days} Ø±ÙˆØ² - ${String(hours).padStart(2, 'Û°')}:${String(minutes).padStart(2, 'Û°')}:${String(seconds).padStart(2, 'Û°')}`;
        }

        function generateDailySchedule() {
            const today = getPersianWeekday();
            const scheduleBody = document.getElementById('scheduleBody');
            const row = document.createElement('tr');
            
            const dayCell = document.createElement('td');
            dayCell.innerHTML = `
                <div>${today}</div>
                <div class="digital-clock">${getTehranTime().toLocaleTimeString('fa-IR')}</div>
            `;
            row.appendChild(dayCell);

            weeklySchedule[today].forEach(subject => {
                const cell = document.createElement('td');
                cell.textContent = subject;
                row.appendChild(cell);
            });

            scheduleBody.innerHTML = '';
            scheduleBody.appendChild(row);
        }

        function updateTheme() {
            const currentHour = getTehranTime().getHours();
            if(!manualTheme) {
                if(currentHour >= 7 && currentHour < 18) {
                    document.body.setAttribute('data-theme', 'light');
                } else {
                    document.body.setAttribute('data-theme', 'dark');
                }
            }
            document.getElementById('themeToggle').textContent = 
                document.body.getAttribute('data-theme') === 'dark' ? 'ğŸŒ™' : 'ğŸŒ';
        }

        function toggleTheme() {
            manualTheme = true;
            const currentTheme = document.body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            document.body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            document.getElementById('themeToggle').textContent = newTheme === 'dark' ? 'ğŸŒ™' : 'ğŸŒ';
        }

        function updateDisplay() {
            document.getElementById('currentDate').textContent = getPersianDate();
            document.getElementById('konkurCountdown').textContent = calculateKonkurCountdown();
            generateDailySchedule();
            updateTheme();
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme');
            if(savedTheme) {
                manualTheme = true;
                document.body.setAttribute('data-theme', savedTheme);
            }
            
            document.getElementById('themeToggle').addEventListener('click', toggleTheme);
            updateDisplay();
            setInterval(updateDisplay, 1000);
            setInterval(updateTheme, 60000);
        });
    </script>
