    <script>
        // ØªÙˆØ§Ø¨Ø¹ ØªØ§Ø±ÛŒØ® Ùˆ Ø²Ù…Ø§Ù†
        function getPersianWeekday() {
            const weekdays = ['ÛŒÚ©Ø´Ù†Ø¨Ù‡', 'Ø¯ÙˆØ´Ù†Ø¨Ù‡', 'Ø³Ù‡â€ŒØ´Ù†Ø¨Ù‡', 'Ú†Ù‡Ø§Ø±Ø´Ù†Ø¨Ù‡', 'Ù¾Ù†Ø¬Ø´Ù†Ø¨Ù‡', 'Ø¬Ù…Ø¹Ù‡', 'Ø´Ù†Ø¨Ù‡'];
            const tehranDate = new Date(new Date().toLocaleString("en-US", {timeZone: "Asia/Tehran"}));
            return weekdays[tehranDate.getDay()];
        }

        function getPersianDate() {
            return new Date().toLocaleDateString('fa-IR', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                timeZone: 'Asia/Tehran'
            });
        }

        function calculateCountdown() {
            const targetDate = new Date('2025-09-23T00:00:00+03:30');
            const now = new Date(new Date().toLocaleString("en-US", {timeZone: "Asia/Tehran"}));
            const diff = targetDate - now;

            if (diff <= 0) return 'ğŸ‰ Ø²Ù…Ø§Ù† Ù…ÙˆØ±Ø¯ Ù†Ø¸Ø± Ø±Ø³ÛŒØ¯Ù‡ Ø§Ø³Øª!';

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            return `${days} Ø±ÙˆØ² Ùˆ ${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')} ØªØ§ Ø§ÙˆÙ„ Ù…Ù‡Ø±`;
        }

        // Ø³ÛŒØ³ØªÙ… Ø¨Ù‡ Ø±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø®ÙˆØ¯Ú©Ø§Ø±
        function updateDisplay() {
            // Ø¨Ù‡ Ø±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ ØªØ§Ø±ÛŒØ® Ùˆ Ø³Ø§Ø¹Øª
            document.getElementById('currentDate').textContent = getPersianDate();
            document.getElementById('countdown').textContent = calculateCountdown();

            // Ø¨Ù‡ Ø±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø¬Ø¯ÙˆÙ„ Ø¨Ø±Ù†Ø§Ù…Ù‡
            const currentDay = getPersianWeekday();
            document.querySelectorAll('#scheduleBody tr').forEach(row => {
                const dayName = row.querySelector('.day-name').textContent.trim();
                const clock = row.querySelector('.digital-clock');
                
                if (dayName === currentDay) {
                    row.classList.add('active-day');
                    const tehranTime = new Date().toLocaleTimeString('fa-IR', {timeZone: "Asia/Tehran"});
                    clock.textContent = tehranTime;
                } else {
                    row.classList.remove('active-day');
                }
            });
        }

        // Ø³ÛŒØ³ØªÙ… ØªØºÛŒÛŒØ± ØªÙ…
        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.body.setAttribute('data-theme', savedTheme);
            document.getElementById('themeToggle').textContent = savedTheme === 'dark' ? 'ğŸŒ™' : 'ğŸŒ';
        }

        function toggleTheme() {
            const currentTheme = document.body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            document.body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            document.getElementById('themeToggle').textContent = newTheme === 'dark' ? 'ğŸŒ™' : 'ğŸŒ';
        }

        // Ø±Ø§Ù‡ Ø§Ù†Ø¯Ø§Ø²ÛŒ Ø§ÙˆÙ„ÛŒÙ‡
        document.addEventListener('DOMContentLoaded', () => {
            initTheme();
            document.getElementById('themeToggle').addEventListener('click', toggleTheme);
            setInterval(updateDisplay, 1000);
            updateDisplay();
        });
    </script>
