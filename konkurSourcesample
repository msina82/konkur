            // به روزرسانی اولیه
            updateDisplay();
            
            // تنظیم زمان‌بند برای به روزرسانی هر ثانیه
            setInterval(updateDisplay, 1000);
            
            // بررسی تغییر روز هر دقیقه
            setInterval(() => {
                const currentDay = getPersianWeekday();
                if (currentDay !== document.querySelector('.day-cell span')?.textContent) {
                    updateDisplay();
                }
            }, 60000);
        });
